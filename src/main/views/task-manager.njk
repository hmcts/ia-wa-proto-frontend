{% extends "template.njk" %}

{% from "govuk/components/select/macro.njk" import govukSelect %}

{% block header %}
  {{ govukHeader({
    homepageUrl: "/",
    serviceName: "Manage cases",
    serviceUrl: "/",
    navigation: [
      {
        href: "/task-list",
        text: "Task list"
      },
      {
        href: "/task-manager",
        text: "Task manager",
        active: true
      },
      {
        href: "/",
        text: "Case list"
      },
      {
        href: "#",
        text: "Create case"
      },
      {
        href: "/",
        text: "Sign Out",
        attributes: {
          "id": "sign-out-button"
          }
      }  
    ]
  }) }}
{% endblock %}

{% block content %}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-one-half">
      <h1 class="govuk-heading-l">Task manager</h1>
      <span class="govuk-hint">
        View tasks by location and caseworker
      </span>
    </div>    
</div>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-one-third">
      {{ govukSelect({
        id: "location",
        name: "location",
        label: {
          text: "Location"
        },
        items: [
          {
            value: "Taylor House",
            text: "Taylor House"
          }  
        ]
      }) }} 
      </div>     
    <div class="govuk-grid-column-two-third">
      {{ govukSelect({
        id: "caseWorker",
        name: "caseWorker",
        label: {
          text: "Caseworker"
        },
        items: [
          {
            value: "all",
            text: "All"
          },  
          {
            value: "Raffy Bushman",
            text: "Raffy Bushman"
          }  
        ]
      }) }}      
    </div>    
</div>

{% endblock %}
