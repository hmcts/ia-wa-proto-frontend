{% extends "template.njk" %}
{% from "govuk/components/header/macro.njk" import govukHeader %}
{% from "govuk/components/phase-banner/macro.njk" import govukPhaseBanner %}
{% from "govuk/components/footer/macro.njk" import govukFooter %}
{% from "govuk/components/tabs/macro.njk" import govukTabs %}
{% from "govuk/components/table/macro.njk" import govukTable %}
{% from "components/status-bar.njk" import statusBar with context %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/warning-text/macro.njk" import govukWarningText %}
{% from "govuk/components/inset-text/macro.njk" import govukInsetText %}


{% block pageTitle %}GOV.UK - WA prototype frontend{% endblock %}

{% block header %}
  {{ govukHeader({
    homepageUrl: "#",
    containerClasses: "app-width-container",
    serviceName: "Immigration & Asylum",
    serviceUrl: "#",
    navigation: [
      {
        href: "#1",
        text: "My cases",
        active: true
      },
      {
        href: "#2",
        text: "My casework"
      },
      {
        href: "#3",
        text: "All cases"
      }
    ]
  }) }}
{% endblock %}

{% block beforeContent %}
  {{ govukPhaseBanner({
    tag: {
      text: "alpha"
    },
    html: 'This is a new service â€“ your <a class="govuk-link" href="#">feedback</a> will help us to improve it.'
  }) }}
{% endblock %}


{% block content %}
  <h1 class="govuk-heading-xl">PA/00321/2018</h1>
  
  {% set overview %}
    <h2 class="govuk-heading-l">Overview</h2>
    <h2 class="govuk-heading-m">Current progress of the case</h2>
    {{ statusBar(stages) }}

    <h2 class="govuk-heading-m">Do this next</h2>
    
    <p class="govuk-body">Check the response uploaded by the respondent.</p>
    <p class="govuk-body">If it complies with the Procedure Rules and Practice Directions, <a href="#" class="govuk-link">direct the appellant to review the Home Office response</a></p>
    <p class="govuk-body">If it does not comply, direct the respondent to <a href="#" class="govuk-link">amend the appeal response</a></p>

    </br>
  {% endset %}

  {% set appealHistory %}
    Appeal
  {% endset %}

  {{ govukTabs({
    items: [
      {
        label: "Overview",
        id: "overview",
        panel: {
          html: overview
        }
      },
      {
        label: "Appeal history",
        id: "appealHistory",
        panel: {
          html: appealHistory
        }
      },
      {
        label: "Documents",
        id: "documents",
        panel: {
          html: "documents"
        }
      },
      {
        label: "Instructions",
        id: "instructions",
        panel: {
          html: "Instructions"
        }
      }
    ]
  }) }}

{% endblock %}
